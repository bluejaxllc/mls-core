# --- Backend Production Environment Variables ---

# Server
PORT=3001
NODE_ENV=production

# Database (Prisma)
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=public
DATABASE_URL=

# Blue Jax Integration
# The API Token for interacting with Blue Jax / GHL APIs
BLUE_JAX_API_TOKEN=
# The Agency Key for high-level operations
BLUE_JAX_AGENCY_KEY=
# The Public Key or Shared Secret used to verify JWTs from Blue Jax
BLUE_JAX_PUBLIC_KEY=


# Security
# Secret used to verify webhook payloads from Blue Jax
WEBHOOK_SECRET=

# --- Frontend Environment Variables ---
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_GOOGLE_MAPS_KEY=

# --- Authentication (NextAuth) ---
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET= # Generate with: openssl rand -base64 32

# --- Email Service (Ethereal / SMTP) ---
ETHEREAL_EMAIL=
ETHEREAL_PASSWORD=
